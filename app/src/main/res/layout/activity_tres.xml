<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell_09_027_pc.proyectomuseos.MainActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:gravity="top"
    >
    <include layout="@layout/activity_logo_titulo_botones"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/MENU"
        android:text="@string/menu_principal"
        android:gravity="center"
        android:textSize="@dimen/Titulo_secundario"

        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"


        android:textStyle="bold"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="415dp"
        android:id="@+id/listView"
        android:layout_below="@+id/MENU"
        android:layout_marginBottom="50dp"
        android:background="@color/abc_secondary_text_material_light"/>


</RelativeLayout>
